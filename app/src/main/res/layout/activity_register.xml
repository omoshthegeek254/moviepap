<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".ui.Register">

    <EditText
        android:id="@+id/mConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:background="#8303A9F4"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/yellowtheme"
        app:layout_constraintEnd_toEndOf="@+id/mPassword"
        app:layout_constraintStart_toStartOf="@+id/mPassword"
        app:layout_constraintTop_toBottomOf="@+id/mPassword" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="341dp"
        android:layout_height="59dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/black1"
        android:fontFamily="@font/aclonica"

        android:padding="5sp"
        android:text="Moviepap Ent"
        android:textAlignment="center"
        android:textColor="@color/yellowtheme"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mRegTitle"
        android:layout_width="304dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="@color/black1"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/appName"
        app:layout_constraintStart_toStartOf="@+id/appName"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <EditText
        android:id="@+id/mUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#8303A9F4"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="text|textPersonName"
        android:textColor="@color/black1"
        app:layout_constraintEnd_toEndOf="@+id/mRegTitle"
        app:layout_constraintStart_toStartOf="@+id/mRegTitle"
        app:layout_constraintTop_toBottomOf="@+id/mRegTitle" />

    <EditText
        android:id="@+id/mEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#8303A9F4"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/mUserName"
        app:layout_constraintStart_toStartOf="@+id/mUserName"
        app:layout_constraintTop_toBottomOf="@+id/mUserName" />

    <EditText
        android:id="@+id/mConfirmEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"
        android:background="#8303A9F4"
        android:ems="10"
        android:hint="Re-Enter Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/mEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mEmail"
        app:layout_constraintTop_toBottomOf="@+id/mEmail" />

    <EditText
        android:id="@+id/mPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#8303A9F4"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/mConfirmEmail"
        app:layout_constraintStart_toStartOf="@+id/mConfirmEmail"
        app:layout_constraintTop_toBottomOf="@+id/mConfirmEmail" />

    <Button
        android:id="@+id/mRegisterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mConfirmPassword"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/mConfirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/mConfirmPassword"
        app:layout_constraintVertical_bias="0.211" />

    <ProgressBar
        android:id="@+id/progressBarReg"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mRegisterBtn"
        app:layout_constraintVertical_bias="0.134" />
</androidx.constraintlayout.widget.ConstraintLayout>